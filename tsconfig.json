{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "lib": [
      "es6",
      "es2017"
    ],
    "target": "es6",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ]
}